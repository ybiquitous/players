{
  "name": "players",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:ybiquitous/players.git",
  "engines": {
    "node": "7"
  },
  "scripts": {
    "dev": "node -r dotenv/config server.js",
    "build": "next build",
    "start": "node -r dotenv/config server.js",
    "test": "NODE_ENV=test ava --serial",
    "test:watch": "yarn test -- --watch",
    "postinstall": "if [ \"$NODE_ENV\" = \"production\" ]]; then yarn build && yarn db:sync; fi",
    "lint-staged": "lint-staged",
    "db:sync": "node -e \"require('./models').sequelize.sync()\"",
    "db:drop": "node -e \"require('./models').sequelize.drop()\""
  },
  "lint-staged": {
    "*.@(js|jsx)": [
      "eslint --fix --max-warnings=0",
      "git add"
    ]
  },
  "pre-commit": {
    "run": "lint-staged"
  },
  "dependencies": {
    "body-parser": "*",
    "dotenv": "*",
    "express": "",
    "isomorphic-fetch": "*",
    "next": "beta",
    "pg": "*",
    "pg-hstore": "*",
    "react": "*",
    "react-dom": "*",
    "sequelize": "*",
    "sequelize-cli": "*"
  },
  "devDependencies": {
    "ava": "*",
    "eslint": "*",
    "eslint-config-ybiquitous": "*",
    "lint-staged": "*",
    "pre-commit": "*"
  }
}
